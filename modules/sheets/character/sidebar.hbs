<div>
    <div class="sideBarBox">

        <div class="imgBox">
            <img class="charImg" src="{{actor.img}}" data-edit="img" data-action="editImage" title="{{actor.name}}" >
            <div class="imgOverlay">
                <div class="charReaSpeed">35</div>
                <div class="charRes1 charResFirst"><span class="charResHead">Smarts</span></br><span class="charResValue">4</span></div>
                <div class="charRes1"><span class="charResHead">Brawn</span></br><span class="charResValue">4</span></div>
            </div>
            <div class="charRes1 charResMiddle"><span class="charResHead">Guts</span></br><span class="charResValue">4</span></div>
            <div class="charRes1 charResMiddle"><span class="charResHead">Charm</span></br><span class="charResValue">4</span></div>
        </div>

        <div class="sideBarFill1"></div>

        <div class="ressBarBox">
            <div class="ressBarHeader">Health</div>
            <div class="ressBar"><div class="ressBarBar ressBarHealth" style="width: 20%;"></div></div>
            <div class="ressBarValue">10 / 10 </div>
        </div>

        <div class="ressBarBox">
            <div class="ressBarHeader">Motes</div>
            <div class="ressBar"><div class="ressBarBar ressBarMana" style="width: 20%;"></div></div>
            <div class="ressBarValue">4 / 4</div>
        </div>

        <div class="sideBarFill2"></div>

        <div class="sideBarFill3"></div>

    </div>

    <div class="menuBox">

        <div class="menuBG"></div>
        <div class="menuLbl"></div>
        <!-- Navigation Bar -->
        <nav class="tabs menuTabs" data-group="primary-tabs">  
            <div class="menuIcon" style="left: 135px;">
                <a class="item" data-tab="tab1" data-group="primary-tabs">
                    <i class="fa-solid fa-book-open-cover"></i>
                </a>
            </div>
            <div class="menuIcon" style="left: 180px;">
                <a class="item" data-tab="tab2" data-group="primary-tabs">
                    <i class="fa-solid fa-book"></i>
                </a>
            </div>
            <div class="menuIcon" style="left: 225px;">
                <a class="item" data-tab="tab3" data-group="primary-tabs">
                    <i class="fa-regular fa-stars"></i>
                </a>
            </div>
            <div class="menuIcon" style="left: 270px;">
                <a class="item" data-tab="tab4" data-group="primary-tabs">
                    <i class="fa-solid fa-swords"></i>
                </a>
            </div>
            <div class="menuIcon" style="left: 315px;">
                <a class="item" data-tab="tab5" data-group="primary-tabs">
                    <i class="fa-solid fa-aperture"></i>
                </a>
            </div>
            <div class="menuIcon" style="left: 360px;">
                <a class="item" data-tab="tab6" data-group="primary-tabs">
                    <i class="fa-solid fa-bezier-curve"></i>
                </a>
            </div>
            <div class="menuSetup" style="left: 405px;">
                <a class="item" data-tab="tab7" data-group="primary-tabs">
                    <i class="fa-solid fa-ellipsis-vertical"></i>
                </a>
            </div>
        </nav>

    </div>

    <div class="contentBox">
        <section class="content">
            <!-- Tab Content -->
            <div class="tab" data-tab="tab1" data-group="primary-tabs">
                {{> "systems/vnv/templates/partials/character-sheet-character.hbs"}}
            </div>

            <div class="tab" data-tab="tab2" data-group="primary-tabs">
                {{> "systems/vnv/templates/partials/character-sheet-background.hbs"}}
            </div>

            <div class="tab" data-tab="tab3" data-group="primary-tabs">
                {{> "systems/vnv/templates/partials/character-sheet-skill.hbs"}}
            </div>

            <div class="tab" data-tab="tab4" data-group="primary-tabs">
                {{> "systems/vnv/templates/partials/character-sheet-combat.hbs"}}
            </div>

            <div class="tab" data-tab="tab5" data-group="primary-tabs">
                {{> "systems/vnv/templates/partials/character-sheet-progression.hbs"}}
            </div>

            <div class="tab" data-tab="tab6" data-group="primary-tabs">
                Pfade
            </div>

            <div class="tab" data-tab="tab7" data-group="primary-tabs">
                Settings
            </div>
        </section>
    </div>
</div>